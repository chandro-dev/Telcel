<Page x:Class="Vistas.Pages.admin.MenuAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vistas.Pages.admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuAdmin">

    <Grid Background="White">
        <StackPanel Margin="20" HorizontalAlignment="Left" Background="DarkRed">
            <Label Content="Administracion de productos"></Label>
            <Separator Margin="20"/>
            <Button Content="Administar asesorios" Click="btnAsesorios"/>
            <Button Content="Administrar computadores" Click="btnComputadores"/>
            <Button Content="Administrar Celulares" Click="btnCelulares"/>
            <Button Content="Administrar personas y clientes"  Click="btnPersonas"/>
            <Button Content="Cerrar sesion" Click="btnSesion"/>
        </StackPanel>
        
    </Grid>
</Page>
